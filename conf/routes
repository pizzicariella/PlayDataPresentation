
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /corpus                     controllers.HomeController.corpus
GET     /analyze                    controllers.HomeController.analyze
POST    /analyze/text               controllers.HomeController.validateTextForm
GET     /info                       controllers.HomeController.info
GET     /corpus/articles            controllers.AnnotatedArticleController.articleList
GET     /corpus/test/articles       controllers.AnnotatedArticleController.inMemoryArticleList
# Javascript routing
GET     /javascriptRoutes           controllers.AnnotatedArticleController.javascriptRoutes
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /assets/*file               controllers.Assets.at(path="/public", file)

      